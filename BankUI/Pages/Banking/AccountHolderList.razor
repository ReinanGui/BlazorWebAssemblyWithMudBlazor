@page "/banking/accountHolders"

<MudTable Items="@AccountHolders" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>First Name</MudTh>
        <MudTh>Last Name</MudTh>
        <MudTh>Date of Birth</MudTh>
        <MudTh>Contact Number</MudTh>
        <MudTh>Email</MudTh>
    </HeaderContent>
    <RowTemplate>
        @foreach (var item in AccountHolders)
        {
            <MudTd DataLabel="First Name">@item.FirstName</MudTd>
            <MudTd DataLabel="Last Name">@item.LastName</MudTd>
            <MudTd DataLabel=">Date of Birth">@item.DateOfBirth.ToString("dd MM yyyy")</MudTd>
            <MudTd DataLabel="Contact Number">@item.ContactNumber</MudTd>
            <MudTd DataLabel="Email">@item.Email</MudTd>
        }
    </RowTemplate>
</MudTable>